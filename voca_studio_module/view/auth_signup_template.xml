<odoo>
    <template id="voca_fields" inherit_id="auth_signup.fields"
              name="Add Voca custom fields">


        <xpath expr="//div[hasclass('field-name')]" position="replace">
            <script type="text/javascript">
                function toggleFields(selectElement) {
                const genderField = document.getElementById('gender_field');
                const phoneField = document.getElementById('phone_field');
                const experField = document.getElementById('experience_field');
                const aboutField = document.getElementById('about_field');
                console.info('gggg',genderField);

                // Show or hide fields based on the selected value
                if (selectElement.value === 'teacher') {
                genderField.style.display = 'block';
                phoneField.style.display = 'block';
                experField.style.display = 'block';
                aboutField.style.display = 'block';
                } else if (selectElement.value === 'student') {
                genderField.style.display = 'none';
                phoneField.style.display = 'none';
                experField.style.display = 'none';
                aboutField.style.display = 'none';

                }
                }
            </script>
            <div class="row mb-3">
                <!-- Add selection field for Teacher or Student -->
                <div class="col-12">
                    <label for="role">Role</label>
                    <select required="required" class="form-control p-1" id="role" name="role"
                            onchange="toggleFields(this)">
                        <option value="" disabled="disabled">Select role ..</option>
                        <option value="teacher">Teacher</option>
                        <option value="student">Student</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3" id="phone_field" style="display:block;">
                <label>Phone</label>
                <div class="input-group mb-3 field-phone">

                    <input class="form-control" type="tel"
                           required="This field is required"
                           name="phone"
                           placeholder="e.g.988 888 888"
                           t-att-value="phone"/>
                </div>
            </div>



            <div class="row mb-3" id="experience_field" style="display:block;">
                <label>Experince</label>
                <div class="input-group mb-3 field-experience">

                     <textarea required="true" type="text"
                          class="form-control " name="experience"
                          style="line-height: 3.5;"
                          />
                </div>
            </div>
            <div class="row mb-3" id="about_field" style="display:block;">
                <label>About</label>
                <div class="input-group mb-3 field-experience">

                     <textarea required="true" type="text"
                          class="form-control " name="about"
                          style="line-height: 3.5;"
                          />
                </div>
            </div>

            <div class="row mb-3">
                <!--                <div class="col-6">-->
                <!--                    <label for="first_name">First Name</label>-->
                <!--                    <input type="text" name="first_name" t-att-value="first_name" id="first_name"-->
                <!--                           class="form-control form-control-sm"-->
                <!--                           placeholder="First name In Arabic"-->
                <!--                           required="required"-->
                <!--                          />-->
                <!--                </div>-->
                <div class="col-6">
                    <label for="nickname">Nickname</label>
                    <input type="text" name="nickname" t-att-value="nickname" id="nickname"
                           class="form-control form-control-sm"
                           required="required" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>

            </div>
            <div class="row mb-3" id="gender_field" style="display:block;">
                <div class="col-12">
                    <label for="gender">Gender</label>
                    <select required="required" class="form-control p-1" name="gender">

                        <option t-att-selected="not default_value" disabled="disabled" value="">Select gender ..
                        </option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="control-label" for="birthday">Date</label>
                    <div>
                        <div class='input-group date'>
                            <input type="date" name="birthday" id="birthday_date"
                                   class="form-control datepicker" required="True"
                                   placeholder="dd/mm/yyyy"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

